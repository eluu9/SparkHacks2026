{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://example.com/schemas/kit.schema.json",
  "title": "Kit Output",
  "type": "object",
  "additionalProperties": false,
  "required": ["kit_title", "summary", "sections"],
  "properties": {
    "kit_title": {
      "type": "string",
      "minLength": 1
    },
    "summary": {
      "type": "string",
      "minLength": 1
    },
    "sections": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": ["name", "items"],
        "properties": {
          "name": {
            "type": "string",
            "minLength": 1
          },
          "items": {
            "type": "array",
            "minItems": 1,
            "items": {
              "type": "object",
              "additionalProperties": false,
              "required": [
                "item_key",
                "name",
                "description",
                "sku_type",
                "specs_to_search",
                "quantity_suggestion",
                "priority",
                "safety_notes",
                "compatibility_notes",
                "query_terms",
                "identifier_hints"
              ],
              "properties": {
                "item_key": {
                  "type": "string",
                  "minLength": 1
                },
                "name": {
                  "type": "string",
                  "minLength": 1
                },
                "description": {
                  "type": "string",
                  "minLength": 1
                },
                "sku_type": {
                  "type": "string",
                  "minLength": 1
                },
                "specs_to_search": {
                  "type": "array",
                  "minItems": 0,
                  "items": {
                    "type": "string",
                    "minLength": 1
                  }
                },
                "quantity_suggestion": {
                  "type": "string",
                  "minLength": 1
                },
                "priority": {
                  "type": "string",
                  "enum": ["essential", "recommended", "optional"]
                },
                "safety_notes": {
                  "type": "array",
                  "minItems": 0,
                  "items": {
                    "type": "string",
                    "minLength": 1
                  }
                },
                "compatibility_notes": {
                  "type": "array",
                  "minItems": 0,
                  "items": {
                    "type": "string",
                    "minLength": 1
                  }
                },
                "query_terms": {
                  "type": "array",
                  "minItems": 0,
                  "items": {
                    "type": "string",
                    "minLength": 1
                  }
                },
                "identifier_hints": {
                  "type": "object",
                  "additionalProperties": false,
                  "required": ["mpn", "model", "upc"],
                  "properties": {
                    "mpn": {
                      "type": ["string", "null"],
                      "minLength": 1
                    },
                    "model": {
                      "type": ["string", "null"],
                      "minLength": 1
                    },
                    "upc": {
                      "type": ["string", "null"],
                      "minLength": 1
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  }
}
