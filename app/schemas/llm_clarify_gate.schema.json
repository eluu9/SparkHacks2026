{
	"$schema": "https://json-schema.org/draft/2020-12/schema",
	"$id": "https://example.com/schemas/llm_clarify_gate.schema.json",
	"title": "LLM Clarify Gate Output",
	"type": "object",
	"additionalProperties": false,
	"required": ["need_clarification"],
	"properties": {
		"need_clarification": {
			"type": "boolean"
		},
		"questions": {
			"type": "array",
			"minItems": 1,
			"maxItems": 3,
			"items": {
				"type": "string",
				"minLength": 1
			}
		},
		"task_interpretation": {
			"type": "object",
			"additionalProperties": false,
			"required": [
				"domain",
				"goals",
				"assumptions",
				"constraints",
				"safety_considerations",
				"regulatory_or_best_practice_notes"
			],
			"properties": {
				"domain": {
					"type": "string",
					"minLength": 1
				},
				"goals": {
					"type": "array",
					"minItems": 1,
					"items": {
						"type": "string",
						"minLength": 1
					}
				},
				"assumptions": {
					"type": "array",
					"minItems": 1,
					"items": {
						"type": "string",
						"minLength": 1
					}
				},
				"constraints": {
					"type": "array",
					"minItems": 0,
					"items": {
						"type": "string",
						"minLength": 1
					}
				},
				"safety_considerations": {
					"type": "array",
					"minItems": 0,
					"items": {
						"type": "string",
						"minLength": 1
					}
				},
				"regulatory_or_best_practice_notes": {
					"type": "array",
					"minItems": 0,
					"items": {
						"type": "string",
						"minLength": 1
					}
				}
			}
		}
	},
	"allOf": [
		{
			"if": {
				"properties": {
					"need_clarification": { "const": true }
				},
				"required": ["need_clarification"]
			},
			"then": {
				"required": ["questions"],
				"not": {
					"required": ["task_interpretation"]
				}
			},
			"else": {
				"required": ["task_interpretation"],
				"not": {
					"required": ["questions"]
				}
			}
		}
	]
}
