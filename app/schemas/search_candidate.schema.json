{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://example.com/schemas/search_candidate.schema.json",
  "title": "Item Search Query Output",
  "type": "object",
  "additionalProperties": false,
  "required": ["items"],
  "properties": {
    "items": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": [
          "item_key",
          "clean_query",
          "expanded_query",
          "strict_match_fingerprint"
        ],
        "properties": {
          "item_key": {
            "type": "string",
            "minLength": 1
          },
          "clean_query": {
            "type": "string",
            "minLength": 1
          },
          "expanded_query": {
            "type": "string",
            "minLength": 1
          },
          "strict_match_fingerprint": {
            "type": "object",
            "additionalProperties": false,
            "required": ["must_have_tokens"],
            "properties": {
              "brand": {
                "type": ["string", "null"],
                "minLength": 1
              },
              "mpn": {
                "type": ["string", "null"],
                "minLength": 1
              },
              "model": {
                "type": ["string", "null"],
                "minLength": 1
              },
              "upc": {
                "type": ["string", "null"],
                "minLength": 1
              },
              "must_have_tokens": {
                "type": "array",
                "minItems": 0,
                "items": {
                  "type": "string",
                  "minLength": 1
                }
              }
            }
          }
        }
      }
    }
  }
}
